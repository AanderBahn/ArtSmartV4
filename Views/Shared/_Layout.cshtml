<!DOCTYPE html>
<html ng-app="ArtSmart">
<head>
    <title>@ViewBag.Title - The Art in Smart</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>
<body  ng-controller="ProductsController as proD">
    <script type="text/javascript" src="/scripts/angular.js"></script>
    <script                        src="/scripts/directives.js">                     </script>
    <script type="text/javascript" src="/scripts/ArtSmart.js"></script>
    <script                        src="/scripts/services.js"></script>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ArtSmart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tablets", "TabletCatalog", "Home")</li>
                    <li>@Html.ActionLink("Printers", "PrinterCatalog", "Home")</li>
                    <li>@Html.ActionLink("Cart", "Cart", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container body-content" >
        

        @RenderBody()
        <hr />

        <footer class="mainFoot navbar-fixed-bottom">
            <section>
                <div class="fo">
                    <p class="timeStamp">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    <ul class="nav navbar-nav navFoot">
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                    <img class="socialIcon" src="~/Images/New_Social_Buttons2.jpg" />
                </div>
            </section>
        </footer>


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
